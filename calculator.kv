#:kivy 1.10.1

<CustomButton@Button>:
    font_size: 32

<CalculatorLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 10
    spacing: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            readonly: True
    
    BoxLayout:
        spacing: 10
        CustomButton:
            text: "AC"
            background_color: .937, .208, .063, 1
            on_press: entry.text = ""

        CustomButton:
            text: "="
            on_press: calculator.calc(entry.text)

        CustomButton:
            text: "CE"
            on_press: calculator.del_one(entry.text)
        
    BoxLayout:
        spacing: 10
        CustomButton:
            text: "9"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "8"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "7"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "-"
            on_press: app.floating = False
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustomButton:
            text: "6"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "5"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "4"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "+"
            on_press: app.floating = False
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustomButton:
            text: "3"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "2"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "1"
            on_press: app.floating = True
            on_press: entry.text += self.text

        CustomButton:
            text: "/"
            on_press: app.floating = False
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustomButton:
            text: "."
            on_press:
                if (app.floating): entry.text += self.text
                if (app.floating): app.floating = False

        CustomButton:
            text: "0"
            on_press: app.trigger = True
            on_press: entry.text += self.text

        CustomButton:
            text: "*"
            on_press: app.floating = False
            on_press: entry.text += self.text

        CustomButton:
            text: "%"
            on_press: app.floating = False
            on_press: entry.text += self.text